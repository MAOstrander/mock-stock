//- extends ../templates/basic.jade
extends ./quote.jade


block details
  div #{symbol}
  div #{name}
  div #{price}

  .container
  h2 Buy/Sell this Stock
  form(method='POST', action='/')
    .form-group
      label Quantity
      input(type='number', name='qty')
    .form-group
      label Buy
        input(type="radio", name="dowhat", value="buy" required)
      label Sell
        input(type="radio", name="dowhat", value="sell" required)
    .form-group
      input(type='submit', value='Submit')
