//- extends ../templates/basic.jade
extends ./quote.jade


block details
  .container
  form(method='POST', action='/')
    h2 Stock Details:
    .form-group
      label Symbol:
      input(type='text', name='sym' value='#{symbol}' readonly)
    .form-group
      label Company Name:
      input(type='text', name='name' value='#{name}' readonly)
    .form-group
      label Price:
      input(type='text', name='price' value='#{price}' readonly)
    .youhave
      label Quantity of this stock you own:
      input(type='text', name='youhave' value='#{youhave}' readonly)

    h2 Buy/Sell this Stock
    .form-group
      label Quantity
      input(type='number', name='qty', min='0')
    .form-group
      label Buy
        input(type="radio", name="dowhat", value="buy" required)
      label Sell
        input(type="radio", name="dowhat", value="sell" required)
    .form-group
      input(type='submit', value='Submit')
